@page
@model AppyHealthWeb.Pages.Physician.Profile.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "Layout/_PhysicianLayout";
}

<a asp-page="/Physician/Profile" class="btn btn-outline-primary float-right m-4">Save</a>

<h2>Edit Profile</h2>

<div class="row">
    <section class="col">
        <div class="card">
            <div class="card-header">Practice</div>
            <div class="card-body">
                <fieldset>
                    <div class="form-group form-row">
                        <div class="col">
                            <label for="name">Name:</label>
                            <input type="text" name="name" class="form-control" />
                        </div>
                        <div class="col">
                            <label for="name">Practice Name:</label>
                            <input type="text" name="name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group form-row">
                        <div class="col">
                            <label for="name">Specialty:</label>
                            <input type="text" name="name" class="form-control" />
                        </div>
                        <div class="col">
                            <label for="name">Sub-Specialty:</label>
                            <input type="text" name="name" class="form-control" />
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>


        <div class="card buffer-top">
            <div class="card-header">Locations</div>
            <div class="card-body">
                <div class="form-group form-row">
                    <label for="name">Address:</label>
                    <input type="text" name="address" class="form-control" />
                </div>
                <div class="form-group form-row">
                    <div class="col">
                        <label for="name">City:</label>
                        <input type="text" name="address" class="form-control" />
                    </div>
                    <div class="col">
                        <label for="name">State:</label>
                        <input type="text" name="name" class="form-control" />
                    </div>
                    <div class="col">
                        <label for="name">Zip:</label>
                        <input type="text" name="name" class="form-control" />
                    </div>
                </div>
                <div class="form-group form-row">
                    <label for="name">Phone:</label>
                    <input type="text" name="address" class="form-control" />
                </div>
                <button type="button" class="btn btn-outline-primary">Add Location</button>
            </div>
        </div>
    </section>
    <section class="col">
        <div class="card">
            <div class="card-header">Staff</div>
            <div class="card-body">
                <button type="button" class="btn btn-outline-primary">Add Staff</button>
            </div>
        </div>
    </section>
</div>